    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/l3"
            android:background="#00A651"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="PA81AD"/>

    </LinearLayout>


    


