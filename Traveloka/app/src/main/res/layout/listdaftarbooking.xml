<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/darimanakemana_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Surabaya -> Jayapura"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_weight="0.56" />


    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tanggal_bookingss"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:gravity="fill_vertical"
        android:textColor="@android:color/black"
        android:text="Sab, 12/12/2017"
        android:textSize="12sp" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/maskapai_bookingid"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:gravity="fill_vertical"
        android:textColor="@android:color/black"
        android:text="Garuda Indonesia"
        android:textSize="12sp" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/status_booking"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:gravity="fill_vertical"
        android:textColor="@android:color/black"
        android:text="Menunggu pembayaran : 30 menit"
        android:textSize="12sp"
        android:background="#1BA0E2"
        android:layout_marginBottom="10dp"/>




</LinearLayout>