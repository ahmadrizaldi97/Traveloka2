<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#E6EAED"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="85dp"
                android:layout_height="165dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:src="@color/traveloka"
                android:id="@+id/gambar_room"/>

            <TextView
                android:id="@+id/textView110"
                android:layout_width="227dp"

                android:layout_height="wrap_content"
                android:text="Nama Room"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_marginTop="11dp"
                android:layout_alignTop="@+id/gambar_room"
                android:layout_alignRight="@+id/hapusroom"
                android:layout_alignEnd="@+id/hapusroom"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#F96D01"
                android:text="Rp. 65.000.000"
                android:layout_below="@+id/textView110"
                android:layout_alignLeft="@+id/textView110"
                android:layout_alignStart="@+id/textView110"
                android:layout_marginTop="10dp"
                android:id="@+id/textView111" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Max. Ruangan"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_below="@+id/textView111"
                android:layout_alignLeft="@+id/textView111"
                android:layout_alignStart="@+id/textView111"
                android:layout_marginTop="25dp"
                android:id="@+id/textView112" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/stokroom"
                android:textSize="15dp"
                android:layout_alignBaseline="@+id/textView112"
                android:layout_alignBottom="@+id/textView112"
                android:layout_toRightOf="@+id/textView112"
                android:layout_toEndOf="@+id/textView112"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SET Tersedia"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button_style_hijau"
                android:layout_below="@+id/textView112"
                android:layout_alignLeft="@+id/textView112"
                android:layout_alignStart="@+id/textView112"
                android:layout_marginTop="20dp"
                android:id="@+id/button3as" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Room"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:id="@+id/hapusroom"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button_style"
                android:layout_alignBaseline="@+id/button3as"
                android:layout_alignBottom="@+id/button3as"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>