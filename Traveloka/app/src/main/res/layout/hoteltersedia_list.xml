<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="10dp"

        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namaHotel"
                android:textSize="20dp"
                android:layout_marginLeft="24dp"
                android:textColor="#000000"
                android:text="Aryaduta Makassar"
                android:layout_alignTop="@+id/imageView12"
                android:layout_toRightOf="@+id/imageView12"
                android:layout_toEndOf="@+id/imageView12"
                android:layout_marginStart="24dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bintang1"
                android:src="@drawable/ic_star"
                android:layout_below="@+id/namaHotel"
                android:layout_alignLeft="@+id/namaHotel"
                android:layout_alignStart="@+id/namaHotel" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bintang2"
                android:src="@drawable/ic_star"
                android:layout_below="@+id/namaHotel"
                android:layout_toRightOf="@+id/bintang1"
                android:layout_toEndOf="@+id/bintang1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bintang3"
                android:src="@drawable/ic_star"
                android:layout_below="@+id/namaHotel"
                android:layout_toRightOf="@+id/bintang2"
                android:layout_toEndOf="@+id/bintang2" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bintang4"
                android:src="@drawable/ic_star"
                android:layout_below="@+id/namaHotel"
                android:layout_toRightOf="@+id/bintang3"
                android:layout_toEndOf="@+id/bintang3" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/bintang5"
                android:src="@drawable/ic_star"
                android:layout_below="@+id/namaHotel"
                android:layout_toRightOf="@+id/bintang4"
                android:layout_toEndOf="@+id/bintang4" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lokasi"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/bintang1"
                android:layout_alignLeft="@+id/bintang1"
                android:layout_alignStart="@+id/bintang1"
                android:id="@+id/imageView14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/lokasihotel"
                android:layout_marginLeft="5dp"
                android:text="Makassar, Sulawesi Selatan"
                android:layout_alignTop="@+id/imageView14"
                android:layout_toRightOf="@+id/imageView14"
                android:layout_toEndOf="@+id/imageView14"
                android:layout_alignBottom="@+id/imageView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:visibility="invisible"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView14"
                android:layout_alignLeft="@+id/imageView14"
                android:layout_alignStart="@+id/imageView14"
                android:id="@+id/textView79" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,5/10"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textColor="#09A154"
                android:layout_marginLeft="5dp"
                android:layout_alignBaseline="@+id/textView79"
                android:layout_alignBottom="@+id/textView79"
                android:layout_toRightOf="@+id/textView79"
                android:layout_toEndOf="@+id/textView79" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.560.000"
                android:id="@+id/hargahotel"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#F96D01"
                android:layout_below="@+id/textView79"
                android:layout_alignLeft="@+id/textView79"
                android:layout_alignStart="@+id/textView79"
                android:layout_marginTop="10dp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:src="@drawable/poinlogo"
                android:layout_below="@+id/hargahotel"
                android:layout_alignLeft="@+id/hargahotel"
                android:layout_alignStart="@+id/hargahotel"
                android:layout_marginTop="5dp"
                android:id="@+id/imageView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai Dari "
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/imageView13"
                android:layout_toRightOf="@+id/imageView13"
                android:layout_toEndOf="@+id/imageView13"
                android:layout_alignBottom="@+id/imageView13"
                android:id="@+id/textView81" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textStyle="bold"
                android:text="156 Poin"
                android:layout_alignTop="@+id/textView81"
                android:layout_toRightOf="@+id/textView81"
                android:layout_toEndOf="@+id/textView81"
                android:textColor="#269DD7"
                android:layout_marginBottom="20dp"
                android:layout_alignBottom="@+id/textView81" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>