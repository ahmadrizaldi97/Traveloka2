<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.ahmadrizaldi.traveloka.TambahGambar">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar 1"
                android:textSize="18dp"
                android:textColor="#000000"
                android:id="@+id/textView106" />
            
            <ImageView
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gambar1"
                android:layout_below="@+id/textView106"
                android:layout_centerHorizontal="true"
                android:src="@drawable/travelokalogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar 2"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gambar1"
                android:textColor="#000000"
                android:id="@+id/textView1026" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gambar2"
                android:layout_below="@+id/textView1026"
                android:layout_centerHorizontal="true"
                android:src="@drawable/travelokalogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar 3"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gambar2"
                android:textColor="#000000"
                android:id="@+id/textView1026s" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gambar3"
                android:layout_below="@+id/textView1026s"
                android:layout_centerHorizontal="true"
                android:src="@drawable/travelokalogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar 4"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gambar3"
                android:textColor="#000000"
                android:id="@+id/textView1026ss" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gambar4"
                android:layout_below="@+id/textView1026ss"
                android:layout_centerHorizontal="true"
                android:src="@drawable/travelokalogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambar 5"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gambar4"
                android:textColor="#000000"
                android:id="@+id/textView1026sss" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gambar5"
                android:layout_below="@+id/textView1026sss"
                android:layout_centerHorizontal="true"
                android:src="@drawable/travelokalogo"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:textColor="#ffffff"
                android:id="@+id/tambahGambar"
                android:layout_marginTop="20dp"
                android:text="Simpan Gambar"
                android:layout_below="@+id/gambar5"/>




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
