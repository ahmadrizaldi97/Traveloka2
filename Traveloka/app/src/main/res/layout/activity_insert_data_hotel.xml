                android:layout_alignStart="@+id/tanggal_checkin" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="12:00"
                android:id="@+id/waktucheckout"
                android:layout_alignBaseline="@+id/tanggal_checkout"
                android:layout_alignBottom="@+id/tanggal_checkout"
                android:layout_alignLeft="@+id/waktucheckin"
                android:layout_alignStart="@+id/waktucheckin" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
